<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C0D9D9"
    tools:context="net.simplifiedcoding.secretariaApp.activity.MainActivity">

    <TextView
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Bem Vindo aluno, o que você deseja?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/textViewTitulo"
        android:textStyle="bold|italic"
        android:textSize="50sp" />

    <Button
        android:id="@+id/btnChamar"
        style="@android:style/Widget.Button"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:enabled="false"
        android:onClick="chamarProf"
        android:text="Falar com o Professor"
        android:layout_gravity="center"
        android:textSize="42sp" />

    <Button
        android:text="Agendar um horário"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/btnAgendar"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:textSize="42sp"
        style="@android:style/Widget.Button"
        android:onClick="agendar" />

</LinearLayout>
