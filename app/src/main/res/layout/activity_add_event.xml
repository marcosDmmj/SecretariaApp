<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.simplifiedcoding.secretariaApp.activity.AddEventActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/display_current_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />
    </LinearLayout>

    <GridLayout
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/titulo_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:text="@string/t_tulo"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTxtTitulo"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="50dp"
            android:layout_row="0"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTxtNome"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="20dp"
            android:layout_row="1"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginTop="20dp"
            android:layout_row="2"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:text="@string/email"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginTop="20dp"
            android:layout_row="1"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:text="@string/nome"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTxtEmail"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="20dp"
            android:layout_row="2"
            android:ems="10"
            android:inputType="textEmailAddress" />


    </GridLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/horario_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="58dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="28dp"
            android:layout_toStartOf="@+id/txtHoraInicio"
            android:fontFamily="sans-serif"
            android:text="Horário de Início: "
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/horario_fim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/horario_inicio"
            android:layout_alignLeft="@+id/horario_inicio"
            android:layout_below="@+id/horario_inicio"
            android:layout_marginTop="28dp"
            android:fontFamily="sans-serif"
            android:text="Horário Fim:"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtHoraInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/horario_inicio"
            android:layout_alignBottom="@+id/horario_inicio"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="407dp"
            android:clickable="true"
            android:onClick="startHourClicked"
            android:text="08:00"
            android:textSize="25sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtHoraFim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtHoraInicio"
            android:layout_alignTop="@+id/horario_fim"
            android:clickable="true"
            android:onClick="endHourClicked"
            android:text="09:00"
            android:textSize="25sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnAddEvento"
        android:layout_marginTop="20dp"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_gravity="center"
        android:onClick="addNewEvent"
        android:text="Adicionar Evento"
        android:textSize="25sp" />
</LinearLayout>
