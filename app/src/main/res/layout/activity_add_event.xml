<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.simplifiedcoding.secretariaApp.activity.AddEventActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/display_current_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/current_day_date"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />
    </LinearLayout>

    <GridLayout
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/titulo_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="left"
            android:text="Título: "
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="18sp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTxtTitulo"
            android:layout_weight="1"
            android:layout_row="0"
            android:layout_column="1" />

        <EditText
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTxtNome"
            android:layout_weight="1"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:text="Email: "
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:id="@+id/nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:text="Nome: "
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:layout_row="1"
            android:layout_column="0" />

        <EditText
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTxtEmail"
            android:layout_row="2"
            android:layout_column="1" />



    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="131dp">

        <TextView
            android:text="Horário de Início: "
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/horario_inicio"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="14dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Horário Fim:"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horario_fim"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/horario_inicio"
            android:layout_alignLeft="@+id/horario_inicio"
            android:layout_alignStart="@+id/horario_inicio" />

        <TextView
            android:text="08:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/horario_inicio"
            android:layout_toRightOf="@+id/horario_inicio"
            android:layout_marginLeft="70dp"
            android:layout_marginStart="70dp"
            android:id="@+id/txtHoraInicio"
            android:textSize="18sp"
            android:onClick="startHourClicked" />

        <TextView
            android:text="10:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/horario_fim"
            android:layout_alignLeft="@+id/txtHoraInicio"
            android:layout_alignStart="@+id/txtHoraInicio"
            android:id="@+id/txtHoraFim"
            android:textSize="18sp"
            android:onClick="endHourClicked" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnAddEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:onClick="addNewEvent"
        android:text="Adicionar Evento" />
</LinearLayout>
